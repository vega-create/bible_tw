---
// TableOfContents.astro - 自動生成文章目錄
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
const h2Headings = headings.filter(h => h.depth === 2);
---

{h2Headings.length > 0 && (
  <nav class="toc bg-gray-50 rounded-lg p-6 mb-8">
    <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
      </svg>
      目錄
    </h2>
    <ul class="space-y-2">
      {h2Headings.map((heading, index) => (
        <li>
          <a 
            href={`#${heading.slug}`}
            class="text-gray-600 hover:text-primary transition-colors flex items-center"
          >
            <span class="text-primary font-medium mr-2">{index + 1}.</span>
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc a:hover {
    text-decoration: underline;
  }
</style>
